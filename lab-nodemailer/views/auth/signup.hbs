<!-- views/auth/signup.hbs -->
<h2>Signup</h2>
<div class="col-4">
<form action="/auth/signup" method="POST" id="form-container">
  <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" id="username" type="text" name="username" placeholder="userName123">
  </div>
  
  <div class="form-group">
    <label for="email">Email</label>
    <input class="form-control" id="email" type="text" name="email" placeholder="mail@mail.com">
  </div>
  
  <div class="form-group">
    <label for="password">Password</label>
    <input class="form-control" id="password" type="password" name="password" placeholder="Your password">
  </div>
  <br> {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  
  <br>
  <button class="form-control btn btn-primary">Create account</button>

</form>
 <p class="small account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</div>